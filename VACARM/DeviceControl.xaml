<UserControl x:Class="VACARM.DeviceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VACARM"
             mc:Ignorable="d"
             Height="100" Width="250" Foreground="White"
             FontSize="11" FontWeight="DemiBold">

    <Border CornerRadius="15" Padding="5" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#555555" Width="250" Height="100">
        <Grid>
            <Rectangle Width="250" Height="20" Margin="-5,-5,-5,75">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop x:Name="deviceColor" Color="#555555" Offset="0.0" />
                        <GradientStop Color="#555555" Offset="0.90" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock Name="deviceName" Text="" Margin="1,-5,0,75"/>
        </Grid>
    </Border>
</UserControl>